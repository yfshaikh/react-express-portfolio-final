{
  "version": 2,
  "builds": [
    {
      "src": "server.js",  
      "use": "@vercel/node"
    },
    {
      "src": "../dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server",
      "headers": {
        "Access-Control-Allow-Origin": "https://react-express-portfolio-final-frontend.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"   
    }
  ]
}
